<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="个人信息主页"
        android:textSize="12pt"
        android:textColor="#000000"
        />
    <ScrollView
        android:layout_below="@id/maintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
            <TextView
                android:id="@+id/info_xhlable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学号"
                android:textSize="10pt"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                />
            <EditText
                android:id="@+id/info_xuehao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="10pt"
                android:editable="false"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/info_xmlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />
                <EditText
                    android:id="@+id/info_xingming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/info_gdlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />
                <EditText
                    android:id="@+id/info_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/info_vclabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认码"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />
                <EditText
                    android:id="@+id/info_vcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/info_roomlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房间号"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />
                <EditText
                    android:id="@+id/info_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/info_buildlabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="楼号"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />

                <EditText
                    android:id="@+id/info_building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/info_loclabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在校区"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />
                <EditText
                    android:id="@+id/info_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/info_gradelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年级"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />
                <EditText
                    android:id="@+id/info_grade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:editable="false"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <Button
            android:id="@+id/selectroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"
            android:text="选择宿舍"
            android:textSize="10pt"
            android:fontFamily="casual"
            />
        <Button
            android:id="@+id/roomcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:text="查询宿舍"
            android:textSize="10pt"
            android:fontFamily="casual"
            />
</RelativeLayout>